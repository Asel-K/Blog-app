<div class="page2">  
  <div class="container text-center">   
    
    <%= simple_form_for @post, html: { multipart: true }  do |f| %>
      <%= f.error_notification %>
      <div class="col text-center">
        
        
        <% unless @post.author_post.blank? %>
        <%= image_tag (@post.author_post_url), id: "previewImage" %>
        <% end %>

        
        <%= f.input :author_post, label: false, input_html: { class: "file-input", type: "file" }, wrapper: false, label_html: { class: "file-label" } %>

        <div class="form-group text-center">
          <div class="form-group text-center">
            <%= f.input :title, label: "Title", input_html: { class: "form-control col-sm-10"}, wrapper: false, label_html: { class: "col-sm-2 col-form-label" } %>
          </div>
        </div>

        <div class="field">
          <div class="form-group text-center">
            <%= f.input :description, input_html: { class: "form-control col-sm-10"}, wrapper: false, label_html: { class: "col-sm-2 col-form-label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.button :submit, class:"button is-primary" %>
          </div>
        </div>
      </div>
    

    
    <% end %>
  </div>
</div>